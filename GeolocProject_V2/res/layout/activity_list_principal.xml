<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
    tools:context="fr.grzk.geolocproject_v2.ListPrincipalActivity"
    android:background="@color/lighter_gray" >


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Where are your friends ?" />
    
    <View
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:background="@android:color/white"/>

    <fr.grzk.geolocproject_v2.dragNdrop.DragNDropListView
        android:id="@+id/listViewContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </fr.grzk.geolocproject_v2.dragNdrop.DragNDropListView>
    
    <Button
        android:id="@+id/activity_listPrincipale_ajoutContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:text="Ajouter un contact">
    </Button>
    
</LinearLayout>
